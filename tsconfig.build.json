{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "module": "esNext",
    "outDir": "lib",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "paths": {
      "~~": ["./src"],
      "~~/*": ["./src/*"]
    }
  },
  "files": [],
  "include": ["./src/**/*"],
  "exclude": [
    "docs/**/*",
    "**/typedoc/**",
    "test/**/*",
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "../../node_modules/**/*",
    "./.yalc/**/*",
    "docusaurus/**/*"
  ]
}
