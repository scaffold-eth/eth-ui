{
  "compilerOptions": {
    "target": "es2017",
    "module": "esNext",
    "outDir": "lib",
    "lib": ["dom", "ESNext", "ES2017"],
    "sourceMap": false,
    "jsx": "react-jsxdev",
    "allowJs": false,
    "declaration": true,
    "declarationDir": "lib",
    "declarationMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "helpers/types"],
    "paths": {
      "~~": ["./src/"],
      "~~/*": ["./src/*"],
      "~helpers": ["./helpers/"],
      "~helpers/*": ["./helpers/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "src",
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests/**/*.tsx",
    "helpers/**/*"
  ],
  "exclude": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "../../node_modules/**/*",
    "useOnBlock.ts",
    "usePoller.ts"
  ]
}
