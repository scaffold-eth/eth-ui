{
  "compilerOptions": {
    "target": "esnext",
    "module": "esNext",
    "outDir": "lib",
    "lib": ["dom", "ESNext", "ES2017"],
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsxdev",
    "allowJs": false,
    "declaration": true,
    "declarationDir": "lib",
    "declarationMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "~~": ["./src/"],
      "~~/*": ["./src/*"]
    }
  },
  "include": ["src", "test", "tsup.config.ts"],
  "exclude": [
    "lib/**/*",
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    ".husky",
    "./.yalc/**/*",
    "**/*.md",
    "docs/**/*",
    "website/**/*",
    "**/*.json"
  ]
}
